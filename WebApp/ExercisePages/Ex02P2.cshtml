@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "Exercise 02 Page 02");

    var message = "";
    var color = "";
    var cid = Request.QueryString["cid"];

    if (string.IsNullOrEmpty(cid))
    {
        Response.Redirect("Ex02P1.cshtml");
    }
    var db = Database.Open("CHINOOKDB");
    var artistquery = "SELECT Name "
        + "FROM Artists "
        + "WHERE ArtistID = @0";
    var artistresults = db.QuerySingle(artistquery, cid);
    var albumquery = "SELECT AlbumID, Title, ArtistID, ReleaseYear, ReleaseLabel "
        + "FROM Albums "
        + "WHERE ArtistID = @0 "
        + "ORDER BY Title";
    var albumresults = db.Query(albumquery, cid);
    WebGrid gridinstance = new WebGrid(albumresults, rowsPerPage: 5);
    if (artistresults == null)
    {
        message = "Artist NOT found";
        color = "color:firebrick";
    }
    else if (albumresults.Count() == 0)
    {
        message = "This artist has NO albums";
        color = "color:firebrick";
    }
}

@section banner {
    <h1>@Page.Title</h1>
}

<div class="offset-1">
    <h3>Albums for Artist: @artistresults.Name</h3>
    <div class="col-11">
        @gridinstance.GetHtml(
            tableStyle: "table table-striped table-bordered table-hover",
            mode: WebGridPagerModes.All,
            firstText: "Start",
            lastText: "End",
            columns: gridinstance.Columns(
                gridinstance.Column(columnName: "AlbumID", header: "Album ID"),
                gridinstance.Column(columnName: "Title", header: "Album Title"),
                gridinstance.Column(columnName: "ArtistID", header: "Artist ID"),
                gridinstance.Column(columnName: "ReleaseYear", header: "Release Year"),
                gridinstance.Column(columnName: "ReleaseLabel", header: "Release Label")))
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12 text-center">
        <p style=@color>
            @message
        </p>
    </div>
</div>

