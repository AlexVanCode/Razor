@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "CRUD - WebGrid Display");

    var pid = Request.QueryString["pid"];

    if (string.IsNullOrEmpty(pid))
    {
        Response.Redirect("60P1PartialStringSearchToCustomGridViewToSingleRecord.cshtml");
    }

    var db = Database.Open("NWDB");
    var partialstring = "%" + pid + "%";
    var prodquery = @"SELECT ProductID, ProductName, "
                + "CategoryID, UnitPrice, UnitsInStock, Discontinued "
                + "FROM Products "
                + "WHERE ProductName LIKE @0 "
                + "ORDER BY ProductName";
    var prodinfo = db.Query(prodquery, partialstring);

    var grid = new WebGrid(prodinfo, rowsPerPage: 5);
}

@section banner {<h1>@Page.Title</h1>}

<div class="offset-1">
    <div class="col-11">
        @grid.GetHtml("table table-bordered table-striped table-hover",
        mode: WebGridPagerModes.All,
        lastText: "Last",
        firstText: "First",
        columns: grid.Columns(
            grid.Column(header: "", 
            format: @<text><a href="~/SamplePages/60P3PartialStringSearchToCustomGridViewToSingleRecord.cshtml?pid=@item.ProductID">Edit</a></text>),
            grid.Column(columnName: "ProductID", header: "Product ID"),
            grid.Column(columnName: "ProductName", header: "Product Name"),
            grid.Column(columnName: "CategoryID", header: "Category ID"),
            grid.Column(columnName: "UnitPrice", header: "Unit Price"),
            grid.Column(columnName: "Discontinued", header: "Discontinued")));
    </div>
</div>
