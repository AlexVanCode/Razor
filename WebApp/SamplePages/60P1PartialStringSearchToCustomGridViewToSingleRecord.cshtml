@{
    Layout = "~/_Layout.cshtml";
    Page.Title = string.Format("Razor - {0}", "CRUD - Search");

    var message = "";
    var color = "";
    var productsearch = "";
}

@section banner{<h1>@Page.Title</h1>}

@if (!IsPost) // NO Buttons Pressed
{

}
else // Buttons Pressed
{
    productsearch = Request.Form["ProductSearch"];
    if (productsearch.IsEmpty())
    {
        message = "Enter a product name (or partial name).";
        color = "color:firebrick";
    }
    else
    {
        var db = Database.Open("NWDB");
        var partialsearchstring = "%" + productsearch + "%";
        var queryStatement = "SELECT ProductID, ProductName, CategoryID, "
                            + "UnitPrice, UnitsInStock, Discontinued "
                            + "FROM Products "
                            + "WHERE ProductName like @0 "
                            + "ORDER BY ProductName";
        var queryProducts = db.Query(queryStatement, partialsearchstring);
        if (queryProducts.Count() == 0)
        {
            message = "No products found with search string.";
            color = "color:firebrick";
        }
        else
        {
            Response.Redirect("60P2PartialStringSearchToCustomGridViewToSingleRecord.cshtml?pid=" + productsearch);
        }
    }
}

<form id="theForm" action="" method="post">
    <div class="row">
        <div class="col-4 text-right">
            <label id="forProductSearch">Product Name (or Partial Name)</label>
        </div>
        <div class="col-8 text-left">
            <input type="text" name="ProductSearch" value="@productsearch">&nbsp;&nbsp;
            <button type="submit" class="btn btn-light" name="Search" id="theSearch">Search</button>
        </div>
    </div>
</form>
<br />
<div class="row">
    <div class="col-4 text-right">
    </div>
    <div class="col-8 text-left">
        <p style=@color>
            @message
        </p>
    </div>
</div>
